<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_MAILTESTER_FORM_LBL_EMAIL_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="subject" type="text"
                
            label="COM_MAILTESTER_FORM_LBL_EMAIL_SUBJECT"
            description="COM_MAILTESTER_FORM_DESC_EMAIL_SUBJECT" 
                
                
                
            filter="html"
            maxlength="255" /> 

       <field name="body" type="editor"
                
            label="COM_MAILTESTER_FORM_LBL_EMAIL_BODY"
            description="COM_MAILTESTER_FORM_DESC_EMAIL_BODY" 
                
                
                
            hide="readmore, pagebreak"
            filter="html" /> 

       <field name="senddate" type="calendar" class="inputbox"
        
        
         default="0000-00-00 00:00:00" 
        
            label="COM_MAILTESTER_FORM_LBL_EMAIL_SENDDATE"
            description="COM_MAILTESTER_FORM_DESC_EMAIL_SENDDATE" 
        format="%Y-%m-%d %H:%M:%S"
        filter="safehtml" /> 

       <field name="createddate" type="calendar" class="inputbox"
        
        
         default="0000-00-00 00:00:00" 
        
            label="COM_MAILTESTER_FORM_LBL_EMAIL_CREATEDDATE"
            description="COM_MAILTESTER_FORM_DESC_EMAIL_CREATEDDATE" 
        format="%Y-%m-%d %H:%M:%S"
        filter="safehtml" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_MAILTESTER_FORM_LBL_EMAIL_CREATED_BY"
            description="COM_MAILTESTER_FORM_DESC_EMAIL_CREATED_BY"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field>

	</fieldset>

</form>
